{% extends 'base.html.twig' %}

{% block title %}Liste Actualité{% endblock %}

{% block header %}<header class="header-actualites">{% endblock %}

{% block body %}

    <div class="container header">
        <div class="row text-header col-sm-8" style="top: 120px;">
            <span id="prix">17 Mai 2016</span>
            <h1>Lorem ipsum dolor sit amet consectetur adipiscing elit.</h1>
            <div class="col-xs-12">
                <input type="submit" value="En savoir plus">
            </div>
        </div>
    </div>
    </header>

    <section id="liste-bien">
        <div class="container">
            <div class="row liste-actualite">

                {% for listactualite in listactualites %}
                <div class="col-sm-6 col-xs-12" style="margin-bottom:100px;">
                    <div class="col-xs-6">
                        <img style="height: 260px; width: 260px;" src="{{ asset(listactualite.firstimage) }}">
                    </div>
                    <div class="col-xs-6" >
                        <h3 style="margin-top: 0">{{ listactualite.titre }}</h3>
                        <p>{{ listactualite.description|slice(0, 130) }}</p>
                        <a href="{{ path('detailactualite',{'id' : listactualite.id}) }}">Découvrir l'actualité <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
                {% endfor %}

                <div class="navigation col-xs-12 text-center">
                    {{ knp_pagination_render(listactualites) }}
                </div>
            </div>
        </div>
    </section>

    <section id="profiler" style="margin-bottom: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-sm-12  decouvrir-lyon">
                    <h2 class="col-xs-9">Etiam aliquam faucibus velit, a elementum massa donec.</h2>
                    <p class="col-xs-9">Donec ultricies euismod nibh, quis posuere ligula hendrerit ac. Praesent non lacinia lacus. Cras dapibus turpis et tellus. Donec ultricies euismod nibh, quis posuere ligula hendrerit ac. Praesent non lacinia lacus. Cras dapibus turpis et tellus.</p>
                    <button class="col-xs-3 col-xs-offset-6" type="button" onclick="location.href='decouvrirlyon'">Découvrir Lyon</button>
                </div>
            </div>
        </div>
    </section>

{% endblock %}