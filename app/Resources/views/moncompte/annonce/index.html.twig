{% extends 'base.html.twig' %}

{% block body %}
    <div class="container header">
        <div class="row text-header col-sm-8">
            <h1>Mon compte</h1>
        </div>
    </div>
    </header>
    <div class="container" id="moncompte">
        <div class="row">
            <h1 class="col-xs-12" >Mes annonces</h1>
            <div class="col-xs-7 padding-left-0"  style="border-right:1px solid #cccccc;">

                        <a href="{{ path('moncompte_annonce_new') }}">Créer une nouvelle annonce</a>


                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Afficher</th>
                            <th>Modifier</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for annonce in annonces %}
                        <tr>
                            <td><img style="width: 100px; height: 100px;" src="{{ asset(annonce.firstimage) }}"></td>
                            <td><a href="{{ path('moncompte_annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                            <td>{{ annonce.titre }}</td>
                            <td>{{ annonce.description|slice(0, 50) }}</td>


                            <td><a class="btn btn-info" href="{{ path('moncompte_annonce_show', { 'id': annonce.id }) }}">Afficher</a></td>
                            <td><a class="btn btn-warning" href="{{ path('moncompte_annonce_edit', { 'id': annonce.id }) }}">Modifier</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
            <div class="col-xs-4 col-xs-offset-1">
                <ul class="list-unstyled">
                    <li><h2 class="titre-filtre">Actions disponibles :</h2></li>
                    <li id="annonce"><a href="{{ path('moncompte_utilisateur_index') }}">Retourner à mon profil</a></li>
                    <li><a href="{{ path('moncompte_annonce_index') }}">Voir mes annonces</a></li>
                    <li><a href="{{ path('moncompte_annonce_new') }}">Ajouter une annonce</a></li>
                    <li><h2 class="titre-filtre">Accès rapide :</h2></li>
                    <li><a href="{{ path('faq') }}">Foire aux questions</a></li>
                    <li><a href="{{ path('contact') }}">Contact</a></li>
                    <li><a href="{{ path('mentions-legales') }}">Mentions légales</a></li>

                </ul>

            </div>
        </div>
    </div>
{% endblock %}
