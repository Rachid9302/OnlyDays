{% extends 'base.html.twig' %}

{% block body %}
    <div class="container header">
        <div class="row text-header col-sm-8">
            <h1>Mon compte</h1>
        </div>
    </div>
    </header>

    <h1>Annonces list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Id</th>
                <th>Reference</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Afficher</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><img style="width: 100px; height: 100px;" src="{{ asset(annonce.firstimage) }}"></td>
                <td><a href="{{ path('moncompte_annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{{ annonce.reference }}</td>
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.description|slice(0, 50) }}</td>


                <td><a class="btn btn-info" href="{{ path('moncompte_annonce_show', { 'id': annonce.id }) }}">Afficher</a></td>
                <td><a class="btn btn-warning" href="{{ path('moncompte_annonce_edit', { 'id': annonce.id }) }}">Modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('moncompte_annonce_new') }}">Create a new annonce</a>
        </li>
    </ul>
{% endblock %}
