{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="container bloc-inscription">
        <div class="row">
            <div class="col-xs-7 image-ambiance">
            </div>
            <div class="col-xs-5 form">
                <form action="{{ path("fos_user_security_check") }}" class="col-xs-12" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <h2>Se connecter à son espace personnel</h2>
                    <label>Votre adresse e-mail :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                    <label>Votre mot de passe :</label>
                    <input type="password" id="password" name="_password" required="required" />



                    <p>Pas encore membre ? Rejoignez-nous en <a href="{{ path('fos_user_registration_register') }}"> >créant votre compte</a></p>
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </form>
            </div>
        </div>
    </div>
<br>
